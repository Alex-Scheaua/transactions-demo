{
  "name": "transactions",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "start": "yarn compose && concurrently \"yarn start-fe\" \"yarn start-be\"",
    "start-fe": "yarn --cwd ./fe dev",
    "start-be": "yarn --cwd ./be start",
    "setup": "yarn setup-db && yarn -i && concurrently \"yarn setup-fe\" \"yarn setup-be\"",
    "setup-fe": "yarn --cwd ./fe -i",
    "setup-be": "yarn --cwd ./be -i",
    "setup-db": "yarn compose && node migrate-db.js && yarn --cwd ./be seed",
    "compose": "docker-compose -f db/compose-db.yml up -d"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "dependencies": {}
}
